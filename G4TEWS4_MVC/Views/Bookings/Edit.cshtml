                    <label asp-for="ItineraryNo" class="control-label"></label>
                    <input asp-for="ItineraryNo" class="form-control" />
                    <span asp-validation-for="ItineraryNo" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input readonly asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input readonly asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label"></label>
                <input readonly asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            @if (ViewBag.AddOrUpdate == "Update")
            {
                <div class="form-group">

                    <label asp-for="Total" class="control-label"></label>
                    <input readonly asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>

                </div>
            }

            <div class="form-group">
                <input type="submit" value="@ViewBag.AddOrUpdate Booking" class="btn btn-primary" />
                <a asp-controller="Customers" asp-action="CustomerHistory"><input type="button" value="Cancel" class="btn btn-secondary" /></a>
            </div>
        </form>
    </div>
</div>


