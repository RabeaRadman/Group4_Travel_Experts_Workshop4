@model G4TEWS4_MVC.Models.BookingBookingDetailModel

@if (ViewBag.AddOrUpdate == "Update")
{
    <h4>@ViewBag.PkgName - @Model.PkgDesc </h4>
    <h5>@ViewBag.CustName</h5>
}
else
{
    <h4>@ViewBag.PackageName - @ViewBag.PackageDesc</h4>
    <h5>@ViewBag.CustFullName</h5>
}

<hr />
<div class="row">
