                <span asp-validation-for="PkgDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingNo" class="control-label"></label>
                @if (ViewBag.AddOrUpdate == "Update")
                {
                    <input readonly asp-for="BookingNo" class="form-control" />
                }
                else
                {
                    <input asp-for="BookingNo" class="form-control" />
                }
                <span asp-validation-for="BookingNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelerCount" class="control-label"></label>
                <input asp-for="TravelerCount" class="form-control" />
                <span asp-validation-for="TravelerCount" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                        <input asp-for="CustomerId" class="form-control" />
                        <label asp-for="CustomerId" class="control-label"></label>

                    <select asp-for="CustomerId" class="form-control">
                        <option value="">Select customer ...</option>
                        @foreach (G4TEWS4_Data.Customer c in ViewBag.Customers)
                        {
                            <option value="@c.CustomerId">@c.CustUserName</option>
                        }
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="TripTypeId" class="control-label"></label>
                @*<input asp-for="TripTypeId" class="form-control" />*@
                <select asp-for="TripTypeId" class="form-control">
                    <option value="">Select trip type ...</option>
                    @foreach (G4TEWS4_Data.TripType t in ViewBag.TripTypes)
                    {
                        <option value="@t.TripTypeId">@t.Ttname</option>
                    }
                </select>

                <span asp-validation-for="TripTypeId" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
            <label asp-for="PackageId" class="control-label"></label>
            <h6>@ViewBag.PackageiId</h6>-->
            @*<input  asp-for="PackageId" class="form-control" />*@
            <!--<span asp-validation-for="PackageId" class="text-danger"></span>
            </div>-->
